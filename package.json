{
  "name": "alpine-tailwind-storybook",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/js/*.* --bundle --outdir=dist/assets/builds",
    "build:css": "tailwindcss -i ./src/css/application.tailwind.css -o ./dist/assets/builds/application.css",
    "watch": "npx nodemon --watch src/js/*.* --watch src/css/*.* --watch src/components/**/*.* --exec \"yarn build && yarn build:css\""
  },
  "devDependencies": {
    "esbuild": "^0.14.2",
    "tailwindcss": "^3.0.0"
  }
}